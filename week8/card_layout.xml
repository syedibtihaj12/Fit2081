<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@android:color/holo_blue_dark"
        card_view:cardCornerRadius="12dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

        <TextView

                android:id="@+id/item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/item_id"
                android:textSize="15sp"
                android:textColor="#ffffff"/>

        <TextView

                android:id="@+id/item_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        <TextView

                android:id="@+id/item_name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/item_name"
                android:textSize="15sp"
                android:textColor="#ffffff"/>

        <TextView

                android:id="@+id/item_name_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/item_name_card"/>

        <TextView

                android:id="@+id/quantity_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/quantity"
                android:textSize="15sp"
                android:textColor="#ffffff" />

        <TextView

                android:id="@+id/quantity_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/item_name_card" />

        <TextView

                android:id="@+id/cost_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:text="@string/cost"
                android:textSize="15sp"
                android:textColor="#ffffff" />

        <TextView

                android:id="@+id/cost_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/item_name_card"/>

        <TextView

                android:id="@+id/description_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:text="@string/description"
                android:textSize="15sp"
                android:textColor="#ffffff" />

        <TextView

                android:id="@+id/description_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/item_name_card" />

        <TextView

                android:id="@+id/isfrozen_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:text="@string/isfrozen"
                android:textSize="15sp"
                android:textColor="#ffffff" />

        <TextView

                android:id="@+id/isfrozen_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/item_name_card" />

        <Button
                android:id="@+id/delete_button_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="260dp"
                android:layout_marginTop="30dp"
                android:text="@string/delete_button" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
